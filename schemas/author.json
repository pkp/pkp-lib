{
	"title": "Author",
	"description": "An author of a publication.",
	"required": [
		"publicationId",
		"contributorRoles",
		"contributorType"
	],
	"properties": {
		"affiliations": {
			"type": "array",
			"description": "The scholarly institution this contributor is employed by or affiliated with.",
			"apiSummary": true,
			"readOnly": true,
			"items": {
				"type": "object",
				"$ref": "#/definitions/Affiliation"
			}
		},
		"biography": {
			"type": "string",
			"description": "An optional bio statement about this contributor.",
			"multilingual": true,
			"validation": [
				"nullable"
			]
		},
		"competingInterests": {
			"type": "string",
			"description": "A declaration of potential competing interests.",
			"multilingual": "true",
			"validation": [
				"nullable"
			]
		},
		"country": {
			"type": "string",
			"description": "The author's country in a two-letter code (ISO 3166-1). See [all codes](https://en.wikipedia.org/wiki/ISO_3166-1_alpha-2#Officially_assigned_code_elements).",
			"apiSummary": true,
			"validation": [
				"nullable",
				"country",
				"regex:/^[A-Z]{2}$/"
			]
		},
		"contributorRoles": {
			"type": "array",
			"description": "The names of this contributor's roles in the publication, such as 'Author' or 'Translator', and the translations",
			"apiSummary": true,
			"readOnly": true,
			"items": {
				"type": "object",
				"$ref": "#/definitions/ContributorRole"
			},
			"validation": [
				"min:1",
				"nullable"
			]
		},
		"contributorType": {
			"type": "string",
			"description": "The name of this contributor's type.",
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"creditRoles": {
			"type": "array",
			"description": "CRediT Roles",
			"apiSummary": true,
			"readOnly": true,
			"items": {
				"type": "object",
				"properties": {
					"role": {
						"type": "string",
						"validation": [
							"url"
						]
					},
					"degree": {
						"type": "string"
					}
				}
			},
			"validation": [
				"nullable"
			]
		},
		"email": {
			"type": "string",
			"apiSummary": true,
			"validation": [
				"email_or_localhost",
				"nullable"
			]
		},
		"familyName": {
			"type": "string",
			"multilingual": true,
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"fullName": {
			"type": "string",
			"description": "The full name of the author. This will be the preferredPublicName or, if that is not available, a string containing the givenName and familyName, or organization name, or anonymous",
			"apiSummary": true,
			"readOnly": true
		},
		"givenName": {
			"type": "string",
			"multilingual": true,
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"id": {
			"type": "integer",
			"apiSummary": true
		},
		"includeInBrowse": {
			"type": "boolean",
			"description": "Whether or not to include this contributor in author lists when the publication appears in search results, tables of content and catalog entries.",
			"default": true,
			"apiSummary": true
		},
		"submissionLocale": {
			"type": "string",
			"description": "The primary locale of the submission this author is attached to. This locale is used as the fallback when a language is missing from a multilingual property.",
			"apiSummary": true,
			"readOnly": true
		},
		"orcid": {
			"type": "string",
			"description": "The ORCID of this contributor. See: https://orcid.org/",
			"apiSummary": true,
			"validation": [
				"nullable",
				"orcid"
			]
		},
		"organizationName": {
			"type": "string",
			"multilingual": true,
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"preferredPublicName": {
			"type": "string",
			"description": "An optional field for contributors to specify how they prefer to be identified in this publication.",
			"multilingual": true,
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"publicationId": {
			"type": "integer",
			"apiSummary": true
		},
		"seq": {
			"type": "integer",
			"description": "The order in which this contributor should appear in a list of contributors.",
			"apiSummary": true
		},
		"url": {
			"type": "string",
			"description": "An optional URL to this contributor's webpage.",
			"validation": [
				"url",
				"nullable"
			]
		},
		"orcidSandbox": {
			"type": "string",
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"orcidAccessToken": {
			"type": "string",
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"orcidAccessScope": {
			"type": "string",
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"orcidRefreshToken": {
			"type": "string",
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"orcidAccessExpiresOn": {
			"type": "string",
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"orcidAccessDenied": {
			"type": "string",
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"orcidEmailToken": {
			"type": "string",
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"orcidIsVerified": {
			"type": "boolean",
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"orcidWorkPutCode": {
			"type": "string",
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"orcidVerificationRequested": {
			"type": "boolean",
			"apiSummary": false
		},
		"orcidDisplayValue": {
			"type": "string",
			"apiSummary": true,
			"readOnly": true,
			"validation": [
				"nullable"
			]
		}
	}
}
