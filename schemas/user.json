{
	"title": "User",
	"description": "A registered user.",
	"properties": {
		"_href": {
			"type": "string",
			"apiSummary": true,
			"readOnly": true
		},
		"affiliation": {
			"type": "string",
			"multilingual": true,
                        "apiSummary": true
		},
		"authId": {
			"type": "integer"
		},
		"authString": {
			"type": "string"
		},
		"billingAddress": {
			"type": "string"
		},
		"biography": {
			"type": "string",
			"multilingual": true,
                        "apiSummary": true
		},
		"country": {
			"type": "string"
		},
		"dateRegistered": {
			"type": "string",
			"validation": [
				"date:Y-m-d H:i:s"
			]
		},
		"dateValidated": {
			"type": "string",
			"validation": [
				"date:Y-m-d H:i:s"
			]
		},
		"dateLastRegistered": {
			"type": "string",
			"validation": [
				"date:Y-m-d H:i:s"
			]
		},
		"dateLastEmail": {
			"type": "string",
			"validation": [
				"date:Y-m-d H:i:s"
			]
		},
		"dateLastLogin": {
			"type": "string",
			"validation": [
				"date:Y-m-d H:i:s"
			]
		},
		"inlineHelp": {
			"type": "boolean"
		},
		"disabled": {
			"type": "boolean",
			"apiSummary": true
		},
		"disabledReason": {
			"type": "string"
		},
		"email": {
			"type": "string",
			"apiSummary": true,
			"validation": [
				"email_or_localhost"
			]
		},
		"familyName": {
			"type": "string",
			"multilingual": true
		},
		"fullName": {
			"type": "string",
			"apiSummary": true,
			"readOnly": true
		},
		"givenName": {
			"type": "string",
			"multilingual": true
		},
		"gossip": {
			"type": "string",
			"multilingual": true,
                        "apiSummary": true
		},
		"groups": {
			"type": "array",
			"apiSummary": true,
			"readOnly": true,
			"items": {
				"$ref": "#/definitions/UserGroup"
			}
		},
		"id": {
			"type": "integer",
			"apiSummary": true,
			"readOnly": true
		},
		"interests": {
			"type": "array",
			"readOnly": true,
                        "apiSummary": true,
			"items": {
				"$ref": "#/definitions/UserInterest"
			}
		},
		"locales": {
			"type": "array",
			"items": {
				"type": "string",
				"validation": [
					"regex:/^[a-z]{2}_[A-Z]{2}(@[a-z]{0,})?$/"
				]
			}
		},
		"mailingAddress": {
			"type": "string"
		},
		"mustChangePassword": {
			"type": "boolean"
		},
		"orcid": {
			"type": "string",
			"apiSummary": true,
			"validation": [
				"orcid"
			]
		},
		"password": {
			"type": "string",
			"writeOnly": true
		},
		"phone": {
			"type": "string"
		},
		"signature": {
			"type": "string",
			"multilingual": true
		},
		"url": {
			"type": "string",
			"validation": [
				"url"
			]
		},
		"userName": {
			"type": "string",
			"apiSummary": true
		}
	}
}
