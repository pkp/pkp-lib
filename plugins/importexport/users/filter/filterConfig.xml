<filterConfig>
	<filterGroups>
		<filterGroup
			symbolic="user=>user-xml"
			displayName="plugins.importexport.users.displayName"
			description="plugins.importexport.users.description"
			inputType="class::classes.user.User[]"
			outputType="xml::schema(plugins/importexport/users/pkp-users.xsd)" />
		<!-- Native XML Users input -->
		<filterGroup
			symbolic="user-xml=>user"
			displayName="plugins.importexport.native.displayName"
			description="plugins.importexport.native.description"
			inputType="xml::schema(plugins/importexport/users/pkp-users.xsd)"
			outputType="class::classes.users.User[]" />
	</filterGroups>
	<filters>
		<!-- Native XML users output -->
		<filter
			inGroup="users=>users-xml"
			class="lib.pkp.plugins.importexport.users.filter.PKPUserUserXmlFilter"
			isTemplate="0" />
		<!-- Native XML users input -->
		<filter
			inGroup="user-xml=>user"
			class="lib.pkp.plugins.importexport.users.filter.UserXmlPkpUserFilter"
			isTemplate="0" />
	</filters>
</filterConfig>
