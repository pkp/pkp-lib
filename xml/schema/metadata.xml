<schema version="0.2">
	<!--
	  *
	  * TABLE citations
	  *
	  -->
	<table name="citations">
		<field name="citation_id" type="I8">
			<KEY />
			<AUTOINCREMENT/>
		</field>
		<field name="assoc_type" type="I8">
			<NOTNULL/>
			<DEFAULT VALUE="0"/>
		</field>
		<field name="assoc_id" type="I8">
			<NOTNULL/>
			<DEFAULT VALUE="0"/>
		</field>
		<field name="citation_state" type="I8">
			<NOTNULL/>
		</field>
		<field name="raw_citation" type="X">
			<NOTNULL/>
		</field>
		<field name="edited_citation" type="X"/>
		<field name="seq" type="I8">
			<NOTNULL/>
			<DEFAULT VALUE="0"/>
		</field>
		<descr>Citations</descr>
		<index name="citations_assoc">
			<col>assoc_type</col>
			<col>assoc_id</col>
		</index>
		<index name="citations_assoc_seq">
			<col>assoc_type</col>
			<col>assoc_id</col>
			<col>seq</col>
			<UNIQUE/>
		</index>
	</table>

	<!--
	  *
	  * TABLE citation_settings
	  *
	  -->
	<table name="citation_settings">
		<field name="citation_id" type="I8">
			<NOTNULL />
		</field>
		<field name="locale" type="C2" size="5">
			<NOTNULL />
			<DEFAULT VALUE=""/>
		</field>
		<field name="setting_name" type="C2" size="255">
			<NOTNULL />
		</field>
		<field name="setting_value" type="X"/>
		<field name="setting_type" type="C2" size="6">
			<NOTNULL/>
		</field>
		<descr>Citation settings</descr>
		<index name="citation_settings_citation_id">
			<col>citation_id</col>
		</index>
		<index name="citation_settings_pkey">
			<col>citation_id</col>
			<col>locale</col>
			<col>setting_name</col>
			<UNIQUE />
		</index>
	</table>

	<!--
	  *
	  * TABLE metadata_descriptions
	  *
	  -->
	<table name="metadata_descriptions">
		<field name="metadata_description_id" type="I8">
			<KEY />
			<AUTOINCREMENT/>
		</field>
		<field name="assoc_type" type="I8">
			<NOTNULL/>
			<DEFAULT VALUE="0"/>
		</field>
		<field name="assoc_id" type="I8">
			<NOTNULL/>
			<DEFAULT VALUE="0"/>
		</field>
		<field name="schema_namespace" type="C2" size="255">
			<NOTNULL />
		</field>
		<field name="schema_name" type="C2" size="255">
			<NOTNULL />
		</field>
		<field name="display_name" type="C2" size="255" />
		<field name="seq" type="I8">
			<NOTNULL/>
			<DEFAULT VALUE="0"/>
		</field>
		<descr>Metadata Descriptions</descr>
		<index name="metadata_descriptions_assoc">
			<col>assoc_type</col>
			<col>assoc_id</col>
		</index>
	</table>

	<!--
	  *
	  * TABLE metadata_description_settings
	  *
	  -->
	<table name="metadata_description_settings">
		<field name="metadata_description_id" type="I8">
			<NOTNULL />
		</field>
		<field name="locale" type="C2" size="5">
			<NOTNULL />
			<DEFAULT VALUE=""/>
		</field>
		<field name="setting_name" type="C2" size="255">
			<NOTNULL />
		</field>
		<field name="setting_value" type="X"/>
		<field name="setting_type" type="C2" size="6">
			<NOTNULL/>
		</field>
		<descr>Metadata Description Settings</descr>
		<index name="metadata_description_settings_id">
			<col>metadata_description_id</col>
		</index>
		<index name="metadata_descripton_settings_pkey">
			<col>metadata_description_id</col>
			<col>locale</col>
			<col>setting_name</col>
			<UNIQUE />
		</index>
	</table>

	<!--
	  *
	  * TABLE transformations
	  *
	  -->
	<table name="transformations">
		<field name="transformation_id" type="I8">
			<KEY />
			<AUTOINCREMENT/>
		</field>
		<field name="display_name" type="C2" size="255" />
		<field name="seq" type="I8">
			<NOTNULL/>
			<DEFAULT VALUE="0"/>
		</field>
		<field name="filter_class" type="C2" size="80"/>
		<field name="input_type" type="C2" size="80" />
		<field name="output_type" type="C2" size="80" />
		<descr>Transformations (configured filter instances)</descr>
	</table>

	<!--
	  *
	  * TABLE transformation_settings
	  *
	  -->
	<table name="transformation_settings">
		<field name="transformation_id" type="I8">
			<NOTNULL />
		</field>
		<field name="locale" type="C2" size="5">
			<NOTNULL />
			<DEFAULT VALUE=""/>
		</field>
		<field name="setting_name" type="C2" size="255">
			<NOTNULL />
		</field>
		<field name="setting_value" type="X"/>
		<field name="setting_type" type="C2" size="6">
			<NOTNULL/>
		</field>
		<descr>Transformation Settings</descr>
		<index name="transformation_settings_id">
			<col>transformation_id</col>
		</index>
		<index name="transformation_settings_pkey">
			<col>transformation_id</col>
			<col>locale</col>
			<col>setting_name</col>
			<UNIQUE />
		</index>
	</table>
</schema>
