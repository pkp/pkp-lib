{
	"title": "Citation",
	"description": "Citation is a reference in a publication to another publication.",
	"required": [
		"publicationId"
	],
	"properties": {
		"id": {
			"type": "integer",
			"description": "The unique id of citation in the database.",
			"readOnly": true,
			"apiSummary": true
		},
		"publicationId": {
			"type": "integer",
			"description": "The publication to which this citation is associated with.",
			"writeDisabledInApi": true,
			"apiSummary": true
		},
		"rawCitation": {
			"type": "string",
			"description": "Optional metadata that contains references for works cited in this submission as raw text.",
			"multilingual": true,
			"validation": [
				"nullable"
			]
		},
		"seq": {
			"type": "integer",
			"description": "The sequence number of citation.",
			"default": 0,
			"validation": [
				"nullable"
			]
		},
		"doi": {
			"type": "string",
			"description": "The DOI itself, such as `10.1234/5a6b-7c8d`.",
			"multilingual": false,
			"apiSummary": true,
			"validation": [
				"nullable",
				"regex:/^\\d+(.\\d+)+\\//"
			]
		},
		"title": {
			"type": "string",
			"description": "Title of work.",
			"multilingual": true,
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"date": {
			"type": "string",
			"description": "The publication date",
			"multilingual": false,
			"apiSummary": true,
			"validation": [
				"nullable",
				"date_format:Y-m-d"
			]
		},
		"type": {
			"type": "string",
			"description": "The type or genre of the work, e.g. journal-article.",
			"multilingual": false,
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"volume": {
			"type": "string",
			"description": "The volume of the issue of the journal, e.g. 495.",
			"multilingual": false,
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"issue": {
			"type": "string",
			"description": "The issue of the journal, e.g. 7442.",
			"multilingual": false,
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"pages": {
			"type": "string",
			"description": "The number of pages of the work/article, e.g. 4.",
			"multilingual": false,
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"firstPage": {
			"type": "string",
			"description": "The first page of the work/article, e.g. 49.",
			"multilingual": false,
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"lastPage": {
			"type": "string",
			"description": "The last page of the work/article, e.g. 59.",
			"multilingual": false,
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"abstract": {
			"type": "string",
			"description": "Abstract of this work",
			"multilingual": true,
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"authors": {
			"type": "array",
			"description": "A list of the authors for this work.",
			"readOnly": true,
			"items": {
				"type": "object",
				"$ref": "#/definitions/Author"
			}
		},
		"journalName": {
			"type": "string",
			"description": "Name of the journal",
			"multilingual": false,
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"journalIssnL": {
			"type": "string",
			"description": "Issn_l of the journal",
			"multilingual": false,
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"journalPublisher": {
			"type": "string",
			"description": "Publisher name of the journal",
			"multilingual": false,
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"url": {
			"type": "string",
			"description": "URL for the work.",
			"multilingual": false,
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"urn": {
			"type": "string",
			"description": "URN for the work.",
			"multilingual": false,
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"arxivId": {
			"type": "string",
			"description": "Arxiv id.",
			"multilingual": false,
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"handleId": {
			"type": "string",
			"description": "Handle id.",
			"multilingual": false,
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"openAlexId": {
			"type": "string",
			"description": "OpenAlex id.",
			"multilingual": false,
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"wikidataId": {
			"type": "string",
			"description": "Wikidata qid.",
			"multilingual": false,
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"openCitationsId": {
			"type": "string",
			"description": "Open Citations id.",
			"multilingual": false,
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"githubIssueId": {
			"type": "string",
			"description": "GitHub issue id for Open Citations.",
			"multilingual": false,
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"isProcessed": {
			"type": "string",
			"description": "Is processed / structured.",
			"multilingual": false,
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		}
	}
}
